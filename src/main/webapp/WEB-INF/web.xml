<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>


    <servlet>
        <servlet-name>customDispatcherServlet</servlet-name>
        <servlet-class>com.zqf.customframwork.servlet.CustomDispatcherServlet</servlet-class>
        <init-param>
            <param-name>contextLoadConfig</param-name>
            <param-value>springmvc.properties</param-value>
        </init-param>
    </servlet>

<!--    拦截策略-->
    <servlet-mapping>
        <servlet-name>customDispatcherServlet</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>
</web-app>
